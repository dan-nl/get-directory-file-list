{
  "name": "get-directory-file-list",
  "version": "0.1.0",
  "description": "a directory helper that returns a Promise containing an array of the files found in a directory",
  "author": "dan entous",
  "license": "MIT",
  "main": "src",
  "keywords": [
    "directory",
    "files",
    "fs",
    "helper"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dan-nl/git-directory-file-list.git"
  },
  "bugs": {
    "url": "https://github.com/dan-nl/git-directory-file-list/issues"
  },
  "homepage": "https://github.com/dan-nl/git-directory-file-list#readme",
  "scripts": {
    "cover:browser": "npm test -- --coverage-report=lcov",
    "cover:cli": "npm test -- --cov",
    "cover:travis": "npm test -- --coverage-report=lcov --no-browser",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "eslint": "eslint .",
    "pre-commit": "echo 'pre-commit checks ...' && npm run eslint && npm test -- --cov",
    "test": "tap test/*.test.js --reporter spec"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run pre-commit"
    }
  },
  "devDependencies": {
    "coveralls": "3.0.0",
    "eslint": "4.18.2",
    "eslint-config-dan-nl": "0.1.3",
    "ghooks": "2.0.2",
    "tap": "11.1.2"
  }
}
